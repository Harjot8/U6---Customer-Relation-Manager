<div class="customer">
	<div class="customize">
      <%= link_to 'edit', edit_customer_path(customer) %>
  		<%= link_to 'x', customer, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
  
	<h1><%= customer.fullname %></h1>

  <% if customer.image.present? %>
	   <%= image_tag customer.image %>
  <% end %>

	<p><span style="font-weight:bold">Phone:</span> <%= number_to_phone(customer.phoneNumber, area_code: true) %></p>
  
  	<% if customer.email.present? %>
  		<p><span style="font-weight:bold">Email:</span> <%= customer.email %></p>
    <% end %>

    <% if customer.province_id.present? %>
      <p><span style="font-weight:bold">Province:</span> <%= customer.province_id %></p>
    <% elsif %>
       <p><span style="font-weight:bold">Province:</span> None</p>
    <% end %>

	<p><span style="font-weight:bold">Notes:</span> <%= customer.notes %></p>
</div>
